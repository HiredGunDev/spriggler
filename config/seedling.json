{
  "header": {
    "signature": "SprigglerConfig",
    "version": "1.0",
    "name": "seedling",
    "description": "Single seedling environment migrated from growseedling",
    "author": "growseedling",
    "created": "2025-01-15T00:00:00Z",
    "modified": "2025-01-15T00:00:00Z",
    "upstream": {
      "url": "https://growseedling.spriggle.diy/api"
    }
  },
  "environments": {
    "defaults": {
      "air": {
        "source": "ambient",
        "exhaust": "external"
      }
    },
    "definitions": [
      {
        "id": "seedling",
        "name": "Seedling Tent",
        "properties": {
          "temperature": {
            "sensors": [
              "temp_sensor_seedling"
            ],
            "controllers": [
              "heater_seedling",
              "exhaust_fan_seedling"
            ],
            "schedules": [
              "day_seedling",
              "night_seedling"
            ]
          },
          "humidity": {
            "sensors": [
              "humidity_sensor_seedling"
            ],
            "controllers": [
              "humidifier_seedling",
              "exhaust_fan_seedling"
            ],
            "schedules": [
              "day_seedling",
              "night_seedling"
            ]
          },
          "illumination": {
            "sensors": [],
            "controllers": [
              "light_seedling"
            ],
            "schedules": [
              "day_seedling",
              "night_seedling"
            ]
          }
        }
      }
    ]
  },
  "sensors": {
    "definitions": [
      {
        "id": "temp_sensor_seedling",
        "what": "temperature",
        "how": "Govee_H5100_temperature",
        "config": {
          "identifier": "2650",
          "refresh_rate": 30
        }
      },
      {
        "id": "humidity_sensor_seedling",
        "what": "humidity",
        "how": "Govee_H5100_humidity",
        "config": {
          "identifier": "2650",
          "refresh_rate": 30
        }
      },
    ]
  },
  "devices": {
    "defaults": {
      "power": {
        "circuit": "seedling_circuit",
        "rating": 800
      },
      "effects": {
        "heater": [
          {
            "property": "temperature",
            "type": "increase"
          }
        ],
        "exhaust_fan": [
          {
            "property": "temperature",
            "type": "dynamic_effect"
          },
          {
            "property": "humidity",
            "type": "dynamic_effect"
          }
        ],
        "humidifier": [
          {
            "property": "humidity",
            "type": "increase"
          }
        ],
        "light": [
          {
            "property": "illumination",
            "type": "state"
          }
        ]
      }
    },
    "definitions": [
      {
        "id": "heater_seedling",
        "what": "heater",
        "how": "KASA_Powerbar",
        "power": {
          "circuit": "seedling_circuit",
          "rating": 1000
        },
        "control": {
          "name": "seedling",
          "outlet_name": "Heater"
        }
      },
      {
        "id": "humidifier_seedling",
        "what": "humidifier",
        "how": "KASA_Powerbar",
        "power": {
          "circuit": "seedling_circuit",
          "rating": 500
        },
        "control": {
          "name": "seedling",
          "outlet_name": "Humidifier"
        }
      },
      {
        "id": "exhaust_fan_seedling",
        "what": "exhaust_fan",
        "how": "KASA_Powerbar",
        "power": {
          "circuit": "seedling_circuit",
          "rating": 200
        },
        "control": {
          "name": "seedling",
          "outlet_name": "Fan"
        }
      },
      {
        "id": "light_seedling",
        "what": "light",
        "how": "KASA_Powerbar",
        "power": {
          "circuit": "seedling_circuit",
          "rating": 200
        },
        "control": {
          "name": "seedling",
          "outlet_name": "Lights"
        }
      }
    ]
  },
  "circuits": {
    "defaults": {
      "max_load": 1800
    },
    "definitions": [
      {
        "id": "seedling_circuit",
        "name": "15A Circuit for Seedling Tent"
      }
    ]
  },
  "schedules": {
    "definitions": [
      {
        "id": "day_seedling",
        "time_range": "06:00-22:00",
        "targets": {
          "temperature": {
            "min": 70,
            "max": 75
          },
          "humidity": {
            "min": 60,
            "max": 70
          },
          "illumination": "on"
        }
      },
      {
        "id": "night_seedling",
        "time_range": "22:00-06:00",
        "targets": {
          "temperature": {
            "min": 65,
            "max": 70
          },
          "humidity": {
            "min": 60,
            "max": 70
          },
          "illumination": "off"
        }
      }
    ]
  },
  "alerts": {
    "defaults": {
      "severity": "warning"
    },
    "definitions": [
      {
        "id": "high_temp_seedling",
        "condition": {
          "sensor": "temp_sensor_seedling",
          "operator": ">",
          "value": 80
        },
        "message": "Seedling tent temperature exceeds 80F.",
        "severity": "critical"
      },
      {
        "id": "high_humidity_seedling",
        "condition": {
          "sensor": "humidity_sensor_seedling",
          "operator": ">",
          "value": 80
        },
        "message": "Seedling tent humidity exceeds 80%.",
        "severity": "warning"
      }
    ]
  }
}
