{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spriggler Configuration Schema",
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "signature": { "type": "string" },
        "version": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "author": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "modified": { "type": "string", "format": "date-time" },
        "upstream": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" },
            "auth_token": { "type": "string" }
          },
          "required": ["url"],
          "additionalProperties": false
        }
      },
      "required": ["signature", "version", "author", "upstream"],
      "additionalProperties": false
    },
    "environments": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "air": {
              "type": "object",
              "properties": {
                "source": { "type": ["string", "null"] },
                "exhaust": { "type": ["string", "null"] }
              },
              "required": ["source", "exhaust"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "air": {
                "type": "object",
                "properties": {
                  "source": { "type": ["string", "null"] },
                  "exhaust": { "type": ["string", "null"] }
                },
                "additionalProperties": false
              },
              "properties": {
                "type": "object",
                "minProperties": 1,
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "sensors": {
                      "type": "array",
                      "items": { "type": "string" },
                      "minItems": 0
                    },
                    "controllers": {
                      "type": "array",
                      "items": { "type": "string" },
                      "minItems": 1
                    },
                    "schedules": {
                      "type": "array",
                      "items": { "type": "string" },
                      "minItems": 1
                    }
                  },
                  "required": ["sensors", "controllers", "schedules"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["id", "properties"],
            "additionalProperties": false
          }
        }
      },
      "required": ["definitions"],
      "additionalProperties": false
    },
    "sensors": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "config": {
              "type": "object",
              "properties": {
                "refresh_rate": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "what": { "type": "string" },
              "how": { "type": "string" },
              "config": {
                "type": "object",
                "properties": {
                  "identifier": { "type": "string" },
                  "address": { "type": "string" },
                  "refresh_rate": { "type": "integer", "minimum": 0 }
                },
                "required": ["identifier"],
                "additionalProperties": false
              }
            },
            "required": ["id", "what", "how"],
            "additionalProperties": false
          }
        }
      },
      "required": ["definitions"],
      "additionalProperties": false
    },
    "devices": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "power": {
              "type": "object",
              "properties": {
                "circuit": { "type": "string" },
                "rating": { "type": ["integer", "number"] }
              },
              "required": ["circuit"],
              "additionalProperties": false
            },
            "effects": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "property": { "type": "string" },
                    "type": { "type": "string" }
                  },
                  "required": ["property", "type"],
                  "additionalProperties": false
                }
              }
            }
          },
          "additionalProperties": false
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "what": { "type": "string" },
              "how": { "type": "string" },
              "power": {
                "type": "object",
                "properties": {
                  "circuit": { "type": "string" },
                  "rating": { "type": ["integer", "number"] }
                },
                "required": ["circuit"],
                "additionalProperties": false
              },
              "control": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "outlet_name": { "type": "string" },
                  "ip_address": { "type": "string" },
                  "port": { "type": "integer", "minimum": 0 }
                },
                "additionalProperties": false
              },
              "effects": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "property": { "type": "string" },
                    "type": { "type": "string" }
                  },
                  "required": ["property", "type"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["id", "what", "how", "control"],
            "additionalProperties": false
          }
        }
      },
      "required": ["definitions"],
      "additionalProperties": false
    },
    "circuits": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "max_load": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "max_load": { "type": "integer", "minimum": 0 }
            },
            "required": ["id"],
            "additionalProperties": false
          }
        }
      },
      "required": ["definitions"],
      "additionalProperties": false
    },
    "schedules": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "time_range": { "type": "string" }
          },
          "additionalProperties": false
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "time_range": { "type": "string" },
              "targets": {
                "type": "object",
                "minProperties": 1,
                "additionalProperties": {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "min": { "type": ["integer", "number"] },
                        "max": { "type": ["integer", "number"] }
                      },
                      "required": ["min", "max"],
                      "additionalProperties": false
                    },
                    { "type": ["string", "number", "boolean"] }
                  ]
                }
              }
            },
            "required": ["id", "time_range", "targets"],
            "additionalProperties": false
          }
        }
      },
      "required": ["definitions"],
      "additionalProperties": false
    },
    "alerts": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "severity": { "type": "string" }
          },
          "additionalProperties": false
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "condition": {
                "type": "object",
                "properties": {
                  "sensor": { "type": "string" },
                  "operator": { "type": "string" },
                  "value": { "type": ["integer", "number"] }
                },
                "required": ["sensor", "operator", "value"],
                "additionalProperties": false
              },
              "message": { "type": "string" },
              "severity": { "type": "string" }
            },
            "required": ["id", "condition", "message"],
            "additionalProperties": false
          }
        }
      },
      "required": ["definitions"],
      "additionalProperties": false
    }
  },
  "required": [
    "header",
    "environments",
    "sensors",
    "devices",
    "circuits",
    "schedules",
    "alerts"
  ],
  "additionalProperties": false
}
