{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spriggler Configuration Schema",
  "type": "object",
  "properties": {
    "environments": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "air": {
              "type": "object",
              "properties": {
                "source": { "type": ["string", "null"] },
                "exhaust": { "type": ["string", "null"] }
              },
              "required": ["source", "exhaust"]
            },
            "sensors": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "air": {
                "type": "object",
                "properties": {
                  "source": { "type": ["string", "null"] },
                  "exhaust": { "type": ["string", "null"] }
                }
              },
              "sensors": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "required": ["id"]
          }
        }
      }
    },
    "sensors": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "config": {
              "type": "object",
              "properties": {
                "refresh_rate": { "type": "integer" },
                "timeout": { "type": "integer" }
              }
            }
          }
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "address": { "type": "string" },
              "config": {
                "type": "object",
                "properties": {
                  "refresh_rate": { "type": "integer" },
                  "timeout": { "type": "integer" }
                }
              }
            },
            "required": ["id", "type", "address"]
          }
        }
      }
    },
    "devices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "location": { "type": "string" },
          "power": {
            "type": "object",
            "properties": {
              "circuit": { "type": "string" }
            },
            "required": ["circuit"]
          },
          "control": { "type": "string" }
        },
        "required": ["id", "type", "location", "power", "control"]
      }
    },
    "circuits": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "max_load": { "type": "integer" }
          }
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "max_load": { "type": "integer" }
            },
            "required": ["id"]
          }
        }
      }
    },
    "schedules": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "time": {
              "type": "object",
              "properties": {
                "start": { "type": "string" },
                "end": { "type": "string" }
              },
              "required": ["start", "end"]
            },
            "targets": {
              "type": "object",
              "properties": {
                "temperature": {
                  "type": "object",
                  "properties": {
                    "min": { "type": "integer" },
                    "max": { "type": "integer" }
                  },
                  "required": ["min", "max"]
                },
                "humidity": {
                  "type": "object",
                  "properties": {
                    "min": { "type": "integer" },
                    "max": { "type": "integer" }
                  },
                  "required": ["min", "max"]
                },
                "lights": { "type": "string" }
              }
            }
          }
        },
        "definitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "environment": { "type": "string" },
              "time": {
                "type": "object",
                "properties": {
                  "start": { "type": "string" },
                  "end": { "type": "string" }
                }
              },
              "targets": {
                "type": "object",
                "properties": {
                  "temperature": {
                    "type": "object",
                    "properties": {
                      "min": { "type": "integer" },
                      "max": { "type": "integer" }
                    }
                  },
                  "humidity": {
                    "type": "object",
                    "properties": {
                      "min": { "type": "integer" },
                      "max": { "type": "integer" }
                    }
                  },
                  "lights": { "type": "string" }
                }
              }
            },
            "required": ["id", "environment"]
          }
        }
      }
    },
    "alerts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "condition": {
            "type": "object",
            "properties": {
              "sensor": { "type": "string" },
              "operator": { "type": "string" },
              "value": { "type": "number" }
            },
            "required": ["sensor", "operator", "value"]
          },
          "message": { "type": "string" },
          "severity": { "type": "string" }
        },
        "required": ["id", "condition", "message"]
      }
    }
  },
  "required": ["environments", "sensors", "devices", "circuits", "schedules", "alerts"]
}
